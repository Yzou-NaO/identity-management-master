<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_bar"
        layout="@layout/layout_title" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_username"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/setting_item_selector"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="@string/username"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detail_username"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/txt_username"
            android:layout_alignRight="@+id/txt_username"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_phonenumber"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/setting_item_selector"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="手机"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detail_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/txt_phonenumber"
            android:layout_alignRight="@+id/txt_phonenumber"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_email"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_selector"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="邮箱"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detail_email"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/txt_email"
            android:layout_alignRight="@+id/txt_email"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_department"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/setting_item_selector"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="部门"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detail_department"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/txt_department"
            android:layout_alignRight="@+id/txt_department"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <TextView
        android:id="@+id/txt_changepassword"
        style="@style/TxtTitle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_item_selector"
        android:drawableRight="@drawable/right"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:text="修改密码"
        android:textSize="16sp" />
</LinearLayout>